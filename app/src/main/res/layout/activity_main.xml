<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veiculos"
        android:id="@+id/veiculos"
        android:textAlignment="center"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/consulta_veiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToConsultaVeiculo"
        android:text="Consulta Veiculo" />

    <Button
        android:id="@+id/cadastro_veiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToCadastroVeiculo"
        android:text="Cadastro Veiculo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Locador"
        android:id="@+id/locador"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/consulta_locador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToConsultaLocador"
        android:text="Consulta Locador" />

    <Button
        android:id="@+id/cadastro_locador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToCadastroLocador"
        android:text="Cadastro Locador" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Locação"
        android:id="@+id/locacao"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/consulta_locacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToConsultaLocacao"
        android:text="Consulta Locação" />

    <Button
        android:id="@+id/cadastro_locacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToCadastroLocacao"
        android:text="Cadastro Locação" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/idioma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeLanguage"
            android:text="PT-BR" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>